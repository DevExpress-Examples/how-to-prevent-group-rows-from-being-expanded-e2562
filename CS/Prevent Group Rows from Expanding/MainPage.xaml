<UserControl x:Class="Prevent_Group_Rows_from_Expanding.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
>
    <Grid>
        <dxg:GridControl GroupRowExpanding="gridControl1_GroupRowExpanding" AutoExpandAllGroups="False" Name="gridControl1">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="ProductName" />
                <dxg:GridColumn FieldName="Price" Width="60" />
                <dxg:GridColumn FieldName="Discount" Width="75" />
                <dxg:GridColumn FieldName="Status" GroupIndex="0" SortOrder="Ascending" x:Name="colStatus" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
